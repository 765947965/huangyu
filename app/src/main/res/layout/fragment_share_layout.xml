<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rlt_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/setinviteriends_bar_back"
            android:layout_width="76dp"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/setts_inviteriends_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="49.5dp"
            android:background="#BDBEBD" >
        </View>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/llt_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:padding="14.6dp"
            android:text="新用户通过您分享的专属邀请码注册充值成功，您将可获得相应的分享补助红包"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="分享多多 红包多多!"
            android:textColor="@color/refurush_color"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_share_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="#0C82F5"
            android:textSize="@dimen/sp12" />

        <Button
            android:id="@+id/bt_share"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_button_box_select"
            android:minHeight="35dp"
            android:text="马上去分享"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llt_share"
        android:layout_below="@id/rlt_title">

        <TextView
            android:id="@+id/tv_share_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/refurush_color"
            android:paddingBottom="14.6dp"
            android:paddingLeft="14.6dp"
            android:paddingRight="14.6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </ScrollView>
</RelativeLayout>