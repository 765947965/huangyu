<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/incall_wait"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <TextView
            android:id="@+id/guishudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/outcall_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/guishudi"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/outcall_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <View
            android:id="@+id/outcall_img_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/outcall_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:src="@drawable/defaultuserimage" />

        <TextView
            android:id="@+id/outcall_decription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="正在呼叫"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Chronometer
            android:id="@+id/outcall_callTimer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center_horizontal|top"
            android:text="注册失败"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/outcall_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/outcall_micro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/micro_off" />

        <ImageButton
            android:id="@+id/outcall_dialkey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/dialboard" />

        <ImageButton
            android:id="@+id/outcall_speaker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/speaker_off" />

        <ImageButton
            android:id="@+id/outcall_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/contacts" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialkey_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dialkey_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_1" />

            <ImageButton
                android:id="@+id/dialkey_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_2" />

            <ImageButton
                android:id="@+id/dialkey_03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dialkey_04"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_4" />

            <ImageButton
                android:id="@+id/dialkey_05"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_5" />

            <ImageButton
                android:id="@+id/dialkey_06"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dialkey_07"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_7" />

            <ImageButton
                android:id="@+id/dialkey_08"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_8" />

            <ImageButton
                android:id="@+id/dialkey_09"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dialkey_btn_mi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_mi" />

            <ImageButton
                android:id="@+id/dialkey_00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_0" />

            <ImageButton
                android:id="@+id/dialkey_btn_jin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:soundEffectsEnabled="true"
                android:src="@drawable/dialkey_jin" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <LinearLayout
        android:id="@+id/outcall_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="horizontal" >

        <View
            android:id="@+id/outcall_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/outcall_hangUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/hand_up_not" />

        <TextView
            android:id="@+id/outcall_go_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

</LinearLayout>