<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailed_information_linlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/detailed_information_activity_back"
            android:layout_width="76dp"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/detailed_information_activity_titlename"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dinfo_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="编辑"
            android:textColor="#1160FD"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="49.5dp"
            android:background="#BDBEBD" >
        </View>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/details_information_tx"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/showimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/roundimage" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="13dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/details_information_name2phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/seximage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/agetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/freandname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/freanduid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="100dp"
        android:background="#e8e8e8" >
    </View>

    <ListView
        android:id="@+id/detailed_information_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:listSelector="#00000000" >
    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="28dp"
        android:background="#e8e8e8" >
    </View>

    <TextView
        android:id="@+id/signaturetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:text="@string/friendsignature"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="28dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="gone" />

    <View
        android:id="@+id/signatureline"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="28dp"
        android:background="#e8e8e8"
        android:visibility="gone" >
    </View>

    <TextView
        android:id="@+id/bthdaytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:text="@string/friendbthday"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="28dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="gone" />

    <View
        android:id="@+id/bthdayline"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="28dp"
        android:background="#e8e8e8"
        android:visibility="gone" >
    </View>

    <TextView
        android:id="@+id/addresstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:text="@string/friendaddress"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="28dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="gone" />

    <View
        android:id="@+id/addressine"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="28dp"
        android:background="#e8e8e8"
        android:visibility="gone" >
    </View>

    <TextView
        android:id="@+id/r_loding4v2_lodingbt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_reg_drawable"
        android:gravity="center"
        android:text="@string/giveminetime"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:visibility="invisible" />

</LinearLayout>