<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/removelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/setts_selfpd_back"
            android:layout_width="76dp"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/self_selfmp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="49.5dp"
            android:background="#BDBEBD" >
        </View>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="15dp" >

        <RelativeLayout
            android:id="@+id/spd_addressrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnRelativeLayoutClick"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/self_dq"
                android:textColor="#000000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/spd_biaoimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/setting_biao" />

            <TextView
                android:id="@+id/spd_addresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/spd_biaoimage"
                android:text="@string/self_no_name"
                android:textColor="#808080"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="15dp" >

        <RelativeLayout
            android:id="@+id/spd_companyrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/spd_company_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/self_company"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sdp_companytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@id/spd_company_title"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="@string/self_no_name"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#808080"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tjsum_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="@string/atween"
                android:textColor="#7cfc00"
                android:textSize="15sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e8e8e8" >
        </View>

        <RelativeLayout
            android:id="@+id/spd_professionrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/spd_profession_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/self_profession"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sdp_professiontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@id/spd_profession_title"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="@string/self_no_name"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#808080"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tjsum_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="@string/atween"
                android:textColor="#7cfc00"
                android:textSize="15sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="15dp" >

        <RelativeLayout
            android:id="@+id/spd_schoolrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/spd_school_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/self_school"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sdp_schooltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@id/spd_school_title"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="@string/self_no_name"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#808080"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tjsum_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="@string/atween"
                android:textColor="#7cfc00"
                android:textSize="15sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>